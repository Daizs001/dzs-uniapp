/* 水平间距 */
.card {
  border-bottom: 1px solid #eeeeee;
  padding: 15px 20px 10px;
}
.card .author {
  display: flex;
  align-items: center;
  font-size: 14px;
}
.card .author .avatar {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin-right: 10px;
  background-color: gray;
}
.card .title {
  padding: 10px 0;
  font-size: 16px;
  line-height: 26px;
  color: #333333;
}
.card .bottom {
  font-size: 12px;
  color: gray;
  display: flex;
  justify-content: space-between;
}
.card .bottom text {
  margin-left: 6px;
}