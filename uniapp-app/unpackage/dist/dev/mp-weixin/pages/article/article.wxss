/* 水平间距 */
.main .detail {
  padding: 0 20px;
  color: #333333;
}
.main .detail .title {
  font-size: 20px;
  padding: 25px 0 25px;
}
.main .detail .info {
  font-size: 12px;
  color: gray;
  display: flex;
  justify-content: space-between;
}
.main .detail .author {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20px 0;
}
.main .detail .author .author-info {
  display: flex;
  align-items: center;
}
.main .detail .author .author-info image {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  margin-right: 8px;
}
.main .detail .details {
  font-size: 16px;
  line-height: 26px;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottom-bar .tool-bar {
  padding: 0 20px;
  height: 60px;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-bar .tool-bar .comment-button {
  display: flex;
  align-items: center;
  height: 32px;
  line-height: 32px;
  background-color: #f5f5f5;
  color: #999aaa;
  border-radius: 16px;
  padding: 0 16px;
  width: 220rpx;
  font-size: 14px;
}
.bottom-bar .tool-bar .comment-button text {
  margin-left: 5px;
}
.bottom-bar .tool-bar .other {
  color: #999aaa;
  font-size: 14px;
  display: flex;
  align-items: center;
}
.comment {
  padding: 20px;
}
.comment editor {
  background-color: #f5f5f5;
  padding: 8px;
  border-radius: 10px;
  color: #333333;
}
.comment button {
  margin: 10px 0 40px;
}