/* 水平间距 */
.top {
  height: 110px;
  background-color: #d2302c;
  color: white;
  font-size: 22px;
  padding: 20px 20px 5px;
}
.top .search .uni-searchbar {
  padding: 10px 0;
}
.top .categoryTab {
  display: flex;
  font-size: 14px;
}
.top .categoryTab .item {
  margin-right: 10px;
  color: lightgray;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top .categoryTab .active {
  color: white;
  font-weight: bold;
}
.no-data {
  font-size: 14px;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image {
  width: 80px;
  margin: 100px 0 30px;
}